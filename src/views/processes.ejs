<!-- /src/views/processes.ejs -->
<%- include('layout/header', { title: 'System Processes' }) %>

<div class="bg-gradient-to-br from-gray-900 to-gray-800 p-6 text-white">
  <div class="container mx-auto">
    <div class="bg-gray-800 rounded-2xl shadow-2xl border border-gray-700 p-6">
      <div class="flex justify-between items-center mb-6">
        <div class="flex items-center space-x-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h2 class="text-2xl font-bold text-purple-400">Process List</h2>
        </div>
        
        <div id="process-count" class="flex space-x-2 text-sm">
          <span class="bg-blue-600 px-3 py-1 rounded-full shadow-md">
            Total: <span id="total-processes">-</span>
          </span>
          <span class="bg-green-600 px-3 py-1 rounded-full shadow-md">
            Running: <span id="running-processes">-</span>
          </span>
          <span class="bg-gray-600 px-3 py-1 rounded-full shadow-md">
            Sleeping: <span id="sleeping-processes">-</span>
          </span>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700">
          <thead class="bg-gray-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
                  </svg>
                  PID
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                  Name
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  CPU %
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Memory %
                </div>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  State
                </div>
              </th>
            </tr>
          </thead>
          <tbody id="process-list" class="divide-y divide-gray-700">
            <!-- Processes will be dynamically populated here -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
socket.on('processStats', (stats) => {
  // Update process counts
  document.getElementById('total-processes').textContent = stats.all;
  document.getElementById('running-processes').textContent = stats.running;
  document.getElementById('sleeping-processes').textContent = stats.sleeping;

  // Update process list
  const processList = document.getElementById('process-list');
  processList.innerHTML = stats.list.map(proc => `
    <tr class="transition-all duration-200 hover:bg-gray-700 hover:bg-opacity-50">
      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
        <span class="bg-gray-700 px-2 py-1 rounded">${proc.pid}</span>
      </td>
      <td class="px-6 py-4 whitespace-nowrap text-sm">
        <div class="flex items-center">
          <span class="font-medium text-white">${proc.name}</span>
        </div>
      </td>
      <td class="px-6 py-4 whitespace-nowrap text-sm">
        <span class="
          ${proc.cpu > 50 ? 'text-red-400' : 
            proc.cpu > 25 ? 'text-yellow-400' : 
            'text-green-400'
          }
        ">${proc.cpu.toFixed(1)}%</span>
      </td>
      <td class="px-6 py-4 whitespace-nowrap text-sm">
        <span class="
          ${proc.mem > 50 ? 'text-red-400' : 
            proc.mem > 25 ? 'text-yellow-400' : 
            'text-green-400'
          }
        ">${proc.mem.toFixed(1)}%</span>
      </td>
      <td class="px-6 py-4 whitespace-nowrap text-sm">
        <span class="
          ${proc.state === 'running' ? 'text-green-400' : 
            proc.state === 'sleeping' ? 'text-blue-400' : 
            'text-gray-400'
          } 
          px-2 py-1 rounded-full text-xs font-medium
        ">${proc.state}</span>
      </td>
    </tr>
  `).join('');
});
</script>

<%- include('layout/footer') %>